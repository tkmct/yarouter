{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowJs": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
